<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="registration">

<uses-permission android:name="android.permission.INTERNET" />

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.Registration">
    <activity
        android:name="dev.tindallia.registration.VerifyDataActivity"
        android:screenOrientation="portrait"
        android:exported="true" />
    <activity
        android:name="dev.tindallia.registration.MainActivity"
        android:windowSoftInputMode="adjustResize"
        android:screenOrientation="portrait"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="dev.tindallia.registration.LoginActivity"
        android:exported="true"
        android:windowSoftInputMode="adjustResize"
        android:screenOrientation="portrait"
        />
</application>

</manifest>